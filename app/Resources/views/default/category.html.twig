{% extends "::base.html.twig" %}

{% block head_extra_class %}head-category{% endblock %}

{% block title %}
    {% trans %}wizard.title.base{% endtrans %} {{ category.name }}
{% endblock %}

{% block title_banner %}
    <div class="imgSquare circle">
        <div class="imgSquareContainer">
            <img src="{{ asset('/uploads/page/category/' ~ category.logo) | imagine_filter('small_thumb')}}"/>
        </div>
    </div>
    <h1>
        {{ category.name }}
    </h1>
{% endblock %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <h2>{{ category.name }}</h2>
                    <p>{{ category.description }}</p>
                </div>
            </div>
            <hr>
            <div class="row">
                {% for page in pages %}
                    <div class="col-md-6">
                        <div class="row text-center">
                            <div class="col-xs-12">
                                <img src="{{ asset('uploads/page/profile/' ~ page.pathProfile ) | imagine_filter('small_thumb') }}" alt="" class="img-responsive margin-auto" style="height:250px;">
                            </div>
                            <div class="col-xs-12">
                                <h3><a href="{{ path('page_show', {id_page: page.id}) }}">{{ page.name }}</a></h3>
                                <p>{{ page.description | raw }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
