{% for publication in publications %}
    <div class="publication">
        <div class="row ">
            <div class="col-xs-2">
                <div class="imgSquare circle">
                    <div class="imgSquareContainer ">
                        {% if publication.type == 'page_publication' %}
                            <img src="{{ asset('uploads/page/profile/' ~ publication.path_profile) | imagine_filter('small_thumb') }}"/>
                        {% else %}
                            {% if publication.path_profile %}
                                <img src="{{ asset('uploads/profile/'~publication.writer_id ~ '/' ~ publication.path_profile) | imagine_filter('small_thumb') }}"/>
                            {% else %}
                                <img src="{{ asset('uploads/profile/default.png')| imagine_filter('small_thumb')  }}"/>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-xs-10">
                {% if publication.type == 'page_publication' %}
                    <p class="lead">
                        <a href="{{ path('publication_show',{'id':publication.publication_id}) }}">{{ publication.title }}</a>
                    </p>
                {% endif %}
                <p class="lead">
                    {% if publication.type == 'page_publication' %}
                        <a href="{{ path('page_show', {'id_page': publication.writer_id}) }}">{{ publication.name }}</a>
                    {% else %}
                        <a class="publication-author" href="{{ path('wizardalley_user_wall', {'id': publication.writer_id}) }}">{{ publication.name }}</a>
                    {% endif %}
                </p>
                <p class="publication-date">{{ publication.created_at | date('d/m/Y') }}
                    - <span  class="publication-date">{{ publication.created_at | date('H:i:s') }}</span>
                </p>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-12">
                {% if publication.type == 'page_publication' %}
                    <p>{{ publication.content | raw }}</p>
                {% else %}
                    <p>{{ publication.content }}</p>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-align-right">

                {% if publication.type == 'page_publication' %}
                    <a class="label defaut-label btn" href="{{ path('publication_show',{'id':publication.publication_id}) }}">{% trans %}
                        publication.display.link{% endtrans %}</a>
                {% else %}
                    <a class="label defaut-label btn"  href="{{ path('user_small_publication_show',{'id':publication.publication_id}) }}">{% trans %}
                        publication.display.link{% endtrans %}</a>
                {% endif %}
                <button class="label defaut-label btn">
                    {% trans %}publication.comments{% endtrans %}
                </button>
                {% if publication.type == 'page_publication' %}
                    <button class="label defaut-label like-unlike-button btn"
                            data-id="{{ publication.publication_id }}"
                            onclick="util.likeOrUnlikePublication({{ publication.publication_id }})"
                        {% if is_like(publication.publication_id) %}
                            value="unlike"
                            >
                            {% trans %}publication.unlike{% endtrans %}
                        {% else %}
                            value="like"
                            >
                            {% trans %}publication.like{% endtrans %}
                        {% endif %}
                    </button>
                {% endif %}
                {% if app.user.id == publication.user_id %}
                    {% include '::includes/disablePublicationButton.html.twig' with {'id': publication.publication_id} %}
                {% elseif app.user %}
                    {% include '::includes/addBlameButton.html.twig' with {'id': publication.publication_id, 'type': 'publication'} %}
                {% endif %}
            </div>
        </div>

    </div>
{% endfor %}