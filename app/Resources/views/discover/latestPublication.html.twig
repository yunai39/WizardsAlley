{% for publication in publications %}
    <div class="publication">
        <div class="row">
            <div class="col-xs-2">

                <div class="imgSquare">
                    <div class="imgSquareContainer circle">
                        {% if publication.user.pathProfile %}
                            <img class="circle"
                                 src="{{ asset('uploads/profile/'~publication.user.id ~ '/' ~ publication.user.pathProfile) }}"/>
                        {% else %}
                            <img class="circle" src="{{ asset('uploads/profile/default.png') }}"/>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-xs-8">
                <p class="lead">
                    <a href="{{ path('publication_show',{'id':publication.id}) }}">{{ publication.title }}</a>
                </p>
                <p class="lead">
                    <a href="{{ path('page_show', {'id_page': publication.page.id}) }}">{{ publication.page.name }}</a>
                </p>
                <p>{{ publication.createdAt | date('d/m/Y') }}
                    - {{ publication.createdAt | date('H:i:s') }}</p>
            </div>
            <div class="col-xs-2">
                <span class="label label-info">
                    <a href="{{ path('wizardalley_page_category', {category_id: publication.page.category.id}) }}">
                        {{ publication.page.category.name }}
                    </a>
                </span>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-12">
                <p>{{ publication.content | raw }}</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-align-right">
                <button class="label defaut-label btn">
                    <a href="{{ path('publication_show',{'id': publication.id}) }}">
                        {% trans %}publication.display.link{% endtrans %}
                    </a>
                </button>
                {% if app.user %}
                    <button class="label defaut-label like-unlike-button btn"
                            data-id="{{ publication.id }}"
                            onclick="util.likeOrUnlikePublication({{ publication.id }})"
                            {% if is_like(publication.id) %}
                            value="unlike"
                    >
                        {% trans %}publication.unlike{% endtrans %}
                        {% else %}
                            value="like"
                            >
                            {% trans %}publication.like{% endtrans %}
                        {% endif %}
                    </button>
                {% endif %}
            </div>
        </div>
    </div>
{% endfor %}