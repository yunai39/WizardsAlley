{% extends "::base.html.twig" %}


{% block title %}
    {% trans %}wizard.title.map{% endtrans %}
{% endblock %}
{% block body %}
    <div class="row">
        {% for map in maps %}
            <div class="col-md-3">
                <h3>{{ map.title }}</h3>
                <img src="{{ asset('uploads/map/' ~ map.logo) | imagine_filter('medium_thumb')  }}" alt="" class="img-responsive">
                <br>
                <p>{{ map.description }}</p>
                <br>
                <div class="row">
                    {% for link in map.links %}
                        <div class="col-xs-12">
                            <a href="{{ link.link }}" target="_blank">>&nbsp;{{ link.display }}</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
{%  endblock %}