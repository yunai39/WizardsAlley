{% extends '::base.html.twig' %}

{% block body -%}
 <div class="publication">
            <div class="row ">
                <div class="col-xs-4">

                    <div class="imgSquare">
                        <div class="imgSquareContainer" >
                            <img  src="{{asset(entity.user.getPictureProfile )}}" />
                        </div>
                    </div>
                </div>
                <div class="col-xs-8">
                    <h3>Par 
                            <a href="{{path('wizardalley_user_wall', {'id': entity.user.id})}}" >{{entity.user.username}}</a>
                        , le {{entity.createdAt | date('Y-m-d')}} à {{entity.createdAt | date('H:i:s')}}
                    </h3>
                </div>
            </div>
                    <br/>
            <div class="row">
                <div class="col-md-1 "></div>
                <div class="col-md-10">
                    <p>{{entity.content | raw}}</p>
                </div>
                <div class="col-md-1 "></div>
            </div>
                   
            <div class="row">
                <div class="col-md-1 "></div>
                <div class="col-md-10 ">
                    <div class="col-md-12 ">
                        <hr/>
                        <h4>{% trans %}publication.comments{% endtrans %}</h4>
                        <hr/>
                    </div>
                    {% for comment in entity.comments %}
                    <div class="col-md-12 comment_content">
                        <div class="col-md-2">

                            <div class="imgSquare">
                                <div class="imgSquareContainer" >
                                    <img  src="{{asset(entity.user.getPictureProfile )}}" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="col-md-12">
                                <h5>Par 
                                        <a href="{{path('wizardalley_user_wall', {'id': comment.user.id})}}" >{{comment.user.username}}</a>
                                    , le {{comment.dateComment | date('Y-m-d')}} à {{comment.dateComment | date('H:i:s')}}
                                </h5>
                            </div>
                            <div class="col-md-12">
                                <p>{{comment.content}}</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="col-md-1 "></div>
            </div>
                
        </div>   

{% endblock %}
