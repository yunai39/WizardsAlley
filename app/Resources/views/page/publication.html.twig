{% for publication in publications %}
    <div class="publication">
        <div class="row ">
            <div class="col-md-2">

                <div class="imgSquare">
                    <div class="imgSquareContainer" >
                        <img src="{{asset('uploads/publications/' ~ publication.path)| imagine_filter('small_thumb') }}" />
                    </div>
                </div>
            </div>
            <div class="col-md-10">
                <h2><a href="{{path('publication_show',{'id': publication.id })}}" >{{publication.title}}</a></h2>
                <h3>{% trans %}wizard.utility.by{% endtrans %}: <a  class="publication-author" href="{{path('wizardalley_user_wall',{'id': publication.user_id})}}" >{{publication.username}}</a>,
                    le <span class="publication-date">{{publication.created_at | date('Y-m-d')}} Ã  {{publication.created_at | date('H:i:s')}}</span>
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p>{{publication.small_content | raw}}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h6>{% trans %}publication.comments{% endtrans %}</h6>
            </div>
        </div>

    </div>
{% endfor %}