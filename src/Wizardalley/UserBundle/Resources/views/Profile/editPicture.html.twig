{% extends "::user/profileBase.html.twig" %}

{% block profile_body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>{% trans %}wizard.user.profile.edit_picture{% endtrans %}</h3>
                    <p>{% trans %}wizard.user.profile.size_limit{% endtrans %}</p>
                    <hr>
                    <button class="btn label">
                        <a href="{{ path('fos_user_profile_show') }}">
                            {% trans %}wizard.utility.back{% endtrans %}
                        </a>
                    </button>
                    <form action="{{ path('wizardalley_user_profile_edit_picture') }}" {{ form_enctype(form) }}
                          method="POST"
                          class="fos_user_profile_picture_edit">
                        {{ form_widget(form) }}
                        <div>
                            <input type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}"/>
                        </div>
                    </form>
                    <div>
                        <img src="{{ asset(app.user.getPictureProfile()) }}" class="profil-edit"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
