{% extends  '::base.html.twig' %}

{% block body %}
<div class="row">
    {# S'il y a une erreur, on l'affiche dans un joli cadre #}
    <div class="col-xs-12  col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-body">

                <h2>{{ 'wizard.login.title' | trans }}</h2>
                <h4 style="text-align:center">
                    {{ 'wizard.login.message' | trans }}</br>

                    <b>"Wizard's Alley"</b>
                </h4>
                {% if error %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}
                {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
                <form action="{{ path('login_check') }}" method="post" class="wizardsalley-login-form">
                    <div class="form-group">
                        <label class="control-label required" for="username">{{ 'wizard.login.login' | trans }}</label>
                        <input id="username" class="form-control" type="text" required="required" name="_username" value="{{ last_username }}">
                    </div>

                    <div class="form-group">
                        <label class="control-label required" for="password">{{ 'wizard.login.password' | trans }}</label>
                        <input id="password" class="form-control" type="password" required="required" name="_password" >
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Connexion" class="wizardsalley-login-form-submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}