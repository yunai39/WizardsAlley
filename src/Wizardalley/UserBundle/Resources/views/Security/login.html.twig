{% extends  '::base.html.twig' %}

 {% block body_style %}url('{{ asset('images/bg-train.jpg') }}'){% endblock %}

{% block head_extra_class %}login-title{% endblock %}

{% block title_banner %}
    <div class="container-login-title text-center">
        <div class="row">
            <div class="col-sm-6 col-xs-12">
                <p class="login-title-description">
                    <h2>{{ 'wizard.login.title' | trans }}</h2>
                    <hr>
                    <p class="head-login-title">
                        {{ 'wizard.login.message' | trans | raw }}
                    </p>
                </p>
            </div>
            <div class="col-sm-6 col-xs-12 wizardsalley-login-form-wrapper">
                <div class="row">
                    {# S'il y a une erreur, on l'affiche dans un joli cadre #}
                    <div class="col-xs-12  col-sm-10 col-sm-offset-1">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.message }}</div>
                                {% endif %}
                                <div>
                                    {% for message in app.session.getFlashBag().get('login-message') %}
                                        <p class="login-message">{{ message }}</p>
                                    {% endfor %}
                                </div>
                                {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
                                <form action="{{ path('login_check') }}" method="post" class="wizardsalley-login-form">
                                    <div class="form-group">
                                        <label class="control-label required"
                                               for="username">{{ 'wizard.login.login' | trans }}</label>
                                        <input id="username" class="form-control" type="text" required="required"
                                               name="_username"
                                               value="{{ last_username }}">
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label required"
                                               for="password">{{ 'wizard.login.password' | trans }}</label>
                                        <input id="password" class="form-control" type="password" required="required"
                                               name="_password">
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Connexion" class="wizardsalley-login-form-submit"/>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
