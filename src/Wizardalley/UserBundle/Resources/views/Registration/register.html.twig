{% extends "FOSUserBundle::layout.html.twig" %}

{% block body_style %}url('{{ asset('images/bg-train.jpg') }}'){% endblock %}

{% block title_banner %}
    <div class="container-login-title text-center">
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <p class="login-title-description">
                    {{ 'wizard.login.message' | trans | raw }}
                    <br>
                    <b>"Wizard's Alley"</b>
                </p>
            </div>
            <div class="col-xs-12 col-sm-6">
                {% block fos_user_content %}
                    <div class="panel panel-default panel-registration-form">
                        <div class="panel-body">
                            <h3>{{ 'wizard.register.title' | trans }}</h3>
                            {% include "FOSUserBundle:Registration:register_content.html.twig" %}
                        </div>
                    </div>
                {% endblock fos_user_content %}

            </div>
        </div>
    </div>
{% endblock %}
