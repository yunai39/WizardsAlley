{% extends 'WizardalleyPublicationBundle:GestionPage:template.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{asset('jquery-ui/jquery-ui.min.css')}}">
    <link rel="stylesheet" href="{{asset('jquery-ui/jquery-ui.theme.min.css')}}">
    <link rel="stylesheet" href="{{asset('jquery-ui/jquery-ui.structure.min.css')}}">
{% endblock %}

{% block gestion %}

    <h1>Publication list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Datepublication</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="admin-table-tbody">
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('publication_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.datePublication %}{{ entity.datePublication|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('publication_show', { 'id':  entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('publication_edit', { 'id':  entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
            {% set last_id = entity.id %}
        {% endfor %}
        </tbody>
    </table>
        <ul>
        <li>
            <a href="{{ path('publication_new',{'id_page' : id_page}) }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
