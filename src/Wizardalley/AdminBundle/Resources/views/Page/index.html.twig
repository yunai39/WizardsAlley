{% extends 'WizardalleyAdminBundle::adminBase.html.twig' %}

{% block body_admin -%}
    <h1>Page list</h1>

    <table class="records_list col-md-12">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Urlfacebook</th>
                <th>Pathcouverture</th>
                <th>Pathprofile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_page_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.urlFacebook }}</td>
                <td>{{ entity.pathCouverture }}</td>
                <td>{{ entity.pathProfile }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_page_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_page_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_page_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
