{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/assets/css/adminStats.css') }}">
{%  endblock %}

{% block main %}
    <h3>Statistique</h3>
    <div class="row">
        <div class="col-md-12">
            <h4>Total</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="widget stats-widget-wrapper bg-green">
                <div class="stats-widget-icon">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </div>
                <div class="stats-widget-info">
                    <div class="stats-widget-title">Nombre d'utilisateur</div>
                    <div class="stats-widget-value">{{ nbUtilisateur }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="widget stats-widget-wrapper bg-red">
                <div class="stats-widget-icon">
                    <i class="fa fa-book" aria-hidden="true"></i>
                </div>
                <div class="stats-widget-info">
                    <div class="stats-widget-title">Nombre de page</div>
                    <div class="stats-widget-value">{{ nbPage }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="widget stats-widget-wrapper bg-blue">
                <div class="stats-widget-icon">
                    <i class="fa fa-file-text" aria-hidden="true"></i>
                </div>
                <div class="stats-widget-info">
                    <div class="stats-widget-title">Nombre de publication</div>
                    <div class="stats-widget-value">{{ nbPublication }}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h4>Ce mois-ci</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="widget stats-widget-wrapper bg-red">
                <div class="stats-widget-icon">
                    <i class="fa fa-book" aria-hidden="true"></i>
                </div>
                <div class="stats-widget-info">
                    <div class="stats-widget-title">Nombre de page</div>
                    <div class="stats-widget-value">{{ nbPageThisMonth }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="widget stats-widget-wrapper bg-blue">
                <div class="stats-widget-icon">
                    <i class="fa fa-file-text" aria-hidden="true"></i>
                </div>
                <div class="stats-widget-info">
                    <div class="stats-widget-title">Nombre de publication</div>
                    <div class="stats-widget-value">{{ nbPublicationThisMonth }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
